<UserControl x:Class="Phoenix.UI.WPF.Views.LibraryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Phoenix.UI.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="My Library" 
                           FontSize="28" FontWeight="Bold"
                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                <TextBlock Text="{Binding Books.Count, StringFormat='{}{0} books'}"
                           FontSize="14" Margin="0,4,0,0"
                           Foreground="{DynamicResource TextSecondaryBrush}"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <!-- Search Box -->
                <TextBox Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                         Style="{DynamicResource SearchTextBoxStyle}"
                         Width="250" Margin="0,0,12,0">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Return" Command="{Binding SearchCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>
                
                <!-- Open File Button -->
                <Button Content="ðŸ“ Open File" 
                        Style="{DynamicResource PrimaryButtonStyle}"
                        Click="OpenFileButton_Click"/>
            </StackPanel>
        </Grid>
        
        <!-- Recent Books Section -->
        <StackPanel Grid.Row="1" Margin="0,0,0,24"
                    Visibility="{Binding RecentBooks.Count, Converter={StaticResource NullToVisibilityConverter}}">
            <TextBlock Text="Recently Read" 
                       FontSize="18" FontWeight="SemiBold"
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       Margin="0,0,0,12"/>
            
            <ItemsControl ItemsSource="{Binding RecentBooks}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{DynamicResource BookCardStyle}" 
                                Width="120" Height="180" Margin="0,0,12,0"
                                MouseLeftButtonDown="BookCard_MouseLeftButtonDown">
                            <Grid>
                                <!-- Cover Image or Placeholder -->
                                <Image Source="{Binding CoverImage, Converter={StaticResource ByteArrayToImageConverter}}"
                                       Stretch="UniformToFill"
                                       Visibility="{Binding CoverImage, Converter={StaticResource NullToVisibilityConverter}}"/>
                                
                                <!-- Placeholder when no cover -->
                                <Border Background="{DynamicResource SurfaceBrush}"
                                        Visibility="{Binding CoverImage, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="ðŸ“–" FontSize="32" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding Title}" 
                                                   TextWrapping="Wrap" TextAlignment="Center"
                                                   Margin="4" FontSize="11"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
        
        <!-- All Books Grid -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" Text="All Books" 
                       FontSize="18" FontWeight="SemiBold"
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       Margin="0,0,0,12"/>
            
            <!-- Books Grid -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Books}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{DynamicResource BookCardStyle}" 
                                    Width="150" Margin="0,0,16,16"
                                    MouseLeftButtonDown="BookCard_MouseLeftButtonDown">
                                <Border.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Open" Command="{Binding DataContext.OpenBookCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"/>
                                        <Separator/>
                                        <MenuItem Header="Delete" Command="{Binding DataContext.DeleteBookCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"/>
                                    </ContextMenu>
                                </Border.ContextMenu>
                                
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="180"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Cover -->
                                    <Border Grid.Row="0" CornerRadius="4,4,0,0" ClipToBounds="True">
                                        <Grid>
                                            <Image Source="{Binding CoverImage, Converter={StaticResource ByteArrayToImageConverter}}"
                                                   Stretch="UniformToFill"
                                                   Visibility="{Binding CoverImage, Converter={StaticResource NullToVisibilityConverter}}"/>
                                            
                                            <Border Background="{DynamicResource SurfaceBrush}">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding CoverImage}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                    <TextBlock Text="ðŸ“–" FontSize="48" HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </Border>
                                    
                                    <!-- Book Info -->
                                    <StackPanel Grid.Row="1" Margin="8">
                                        <TextBlock Text="{Binding Title}" 
                                                   FontWeight="SemiBold" FontSize="13"
                                                   TextTrimming="CharacterEllipsis"
                                                   ToolTip="{Binding Title}"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        <TextBlock Text="{Binding Author}" 
                                                   FontSize="11" Margin="0,2,0,0"
                                                   TextTrimming="CharacterEllipsis"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            
            <!-- Empty State -->
            <StackPanel Grid.Row="1" 
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        Visibility="{Binding Books.Count, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}">
                <TextBlock Text="ðŸ“š" FontSize="64" HorizontalAlignment="Center"/>
                <TextBlock Text="Your library is empty" 
                           FontSize="18" Margin="0,12,0,8"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Drop an ePub file here or click 'Open File' to get started"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
